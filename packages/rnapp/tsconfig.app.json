{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": [],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "test-setup.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../data-access/src/**/*.ts",
    "../../data-access/src/**/*.tsx"
  ]
}
